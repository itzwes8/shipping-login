<body>
  <h2>Log In</h2>
  <input id="email" type="email" placeholder="Email" />
  <input id="password" type="password" placeholder="Password" />
  <button onclick="logIn()">Log In</button>
  <a href="#" onclick="forgotPassword()">Forgot Password?</a>
  <p id="message"></p>

  <script>
    const supabase = supabase.createClient(
       'https://ggogevnzmukktcsgniyk.supabase.co',
      'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Imdnb2dldm56bXVra3Rjc2duaXlrIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDgyMjExNTksImV4cCI6MjA2Mzc5NzE1OX0.HSeIAtUsKybGsA4C7XiNKhry0tlgaXhdG_0AY8gLYxM'
    );



    async function logIn() {
      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;

      const { data, error } = await supabase.auth.signInWithPassword({ email, password });

      if (error) {
        document.getElementById('message').innerText = error.message.includes("Invalid login credentials")
          ? "Account not found or wrong password."
          : error.message;
      } else {
        document.getElementById('message').innerText = "Login successful!";
        // Optionally redirect
        // window.location.href = "dashboard.html";
      }
    }

    async function forgotPassword() {
      const email = prompt("Enter your email to reset password:");
      if (!email) return;

      const { data, error } = await supabase.auth.resetPasswordForEmail(email);
      if (error) {
        alert(error.message);
      } else {
        alert("Password reset email sent.");
      }
    }
  </script>
